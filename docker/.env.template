# Aptlantis Docker Environment Configuration
# Copy this file to .env and fill in the values

#############################################
# General Configuration
#############################################

# Domain name for the application
DOMAIN=aptlantis.net

# Time zone
TZ=UTC

# Docker registry for custom images
REGISTRY=localhost

# Image tag for custom images
TAG=latest

#############################################
# Vanguard - Security Perimeter
#############################################

# Cloudflare DNS API credentials for Let's Encrypt
CLOUDFLARE_EMAIL=your@email.com
CLOUDFLARE_API_KEY=your_global_api_key

# CrowdSec configuration
CROWDSEC_BOUNCER_KEY=changeme

# Vault configuration
VAULT_ROOT_TOKEN=changeme

#############################################
# Nexus - Core Infrastructure
#############################################

# MongoDB credentials
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=changeme

# Grafana admin password
GRAFANA_ADMIN_PASSWORD=changeme

#############################################
# Conventicle - Social and AI Services
#############################################

# TheLounge admin credentials
THELOUNGE_ADMIN_USER=admin
THELOUNGE_ADMIN_PASSWORD=changeme

#############################################
# RepoPulse - Repository Management
#############################################

# Repository sync configuration
RSYNC_INTERVAL=3600
RSYNC_TIMEOUT=1800